<% @chats.each do |chat| %>
    <li id="chat_<%= chat.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
        <span><%= chat.name || "Chat ##{chat.id}" %></span>
        <%= link_to 'Delete', chat_path(chat), data: { turbo_method: :delete }, class: "btn btn-danger btn-sm" %>


    </li>
<% end %>