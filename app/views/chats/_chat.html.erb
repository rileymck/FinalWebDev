<li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center p-3">
  <!-- Display the chat name or default to 'Chat #id' -->
  <span><%= chat.name || "Chat ##{chat.id}" %></span>

  <!-- Delete Button -->
  <%= button_to "Delete", chat_path(chat), method: :delete, class: "btn btn-danger btn-sm" %>
</li>
